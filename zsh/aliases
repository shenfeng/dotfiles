#enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'

alias tw='sudo tcpdump -i any -s 65535 -w /tmp/tcpdump && wireshark /tmp/tcpdump'
alias ..='cd ..'

alias l='ls -lhSr'              # sort by size desc
alias lh='ls -ld .*'            # List only file beginning with "."
alias f='free -m'
alias df='df -h'

# color
alias tree='tree -C'

#easy to see network
alias li='lsof -i -nP'
alias sli='sudo lsof -i -nP'
alias 'ps?'='ps ax | grep '

alias gb='git branch'
alias gl='git lg'
alias g='git status'
# alias work='cd ~/gocode/src/github.com/kylentechwolf/engine'
alias gd='git difftool --cached'

alias dhclient='dhclient -v'
alias nc='rlwrap nc'

# allow ease use of emacs to edit file
alias e='emacsclient -n'
alias xcopy='xclip -selection clipboard'

is_linux() { [ $OSTYPE = 'linux-gnu' ]; }

# edit file with root privs
function E() {
    if is_linux; then
        file=`readlink -f $1`
        emacsclient -n "/sudo:root@localhost:$file"
    else
        file=`greadlink -f $1`
        emacsclient -n "/sudo:root@localhost:$file"
    fi
}


# copy full path to clipboard
function fp() {
    if is_linux; then
        echo `readlink -f $1`
        echo -n `readlink -f $1` | xcopy
    else
        echo `greadlink -f $1`
        echo -n `greadlink -f $1` | pbcopy
    fi
}

function work() {
    dir=`readlink -f ~/gocode/src/github.com/kylentechwolf/engine/$1`
    # echo $dir
    cd $dir
}

# start emacs maximized
function em() {
    if [ $# != 0 ]
    then
        emacs --maximized $1&!
    else
        emacs --maximized &!
    fi
}

function md () { mkdir -p "$@" && cd "$@"; }
